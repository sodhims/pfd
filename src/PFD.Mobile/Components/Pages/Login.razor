@page "/login"
@page "/"
@inject IAuthService AuthService
@inject NavigationManager Navigation

<div class="login-container">
    <div class="login-box">
        <div class="login-header">
            <div class="app-icon">ðŸ“…</div>
            <h1>PFD Planner</h1>
            <p>Personal Daily Planner</p>
        </div>

        @if (!IsRegistering)
        {
            <div class="form-group">
                <label>Username</label>
                <input type="text" @bind="Username" placeholder="Enter username" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" @bind="Password" placeholder="Enter password" />
            </div>
            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="error-message">@ErrorMessage</div>
            }
            <button class="btn-primary" @onclick="HandleLogin" disabled="@IsLoading">
                @(IsLoading ? "Logging in..." : "Login")
            </button>
            <p class="toggle-text">
                Don't have an account?
                <span class="link" @onclick="ToggleMode">Register</span>
            </p>
        }
        else
        {
            <div class="form-group">
                <label>Username</label>
                <input type="text" @bind="Username" placeholder="Choose a username" />
            </div>
            <div class="form-group">
                <label>Display Name (optional)</label>
                <input type="text" @bind="DisplayName" placeholder="Your name" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" @bind="Password" placeholder="Choose a password" />
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input type="password" @bind="ConfirmPassword" placeholder="Confirm password" />
            </div>
            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="error-message">@ErrorMessage</div>
            }
            <button class="btn-primary" @onclick="HandleRegister" disabled="@IsLoading">
                @(IsLoading ? "Creating account..." : "Register")
            </button>
            <p class="toggle-text">
                Already have an account?
                <span class="link" @onclick="ToggleMode">Login</span>
            </p>
        }
    </div>
</div>

@code {
    private string Username { get; set; } = string.Empty;
    private string Password { get; set; } = string.Empty;
    private string ConfirmPassword { get; set; } = string.Empty;
    private string DisplayName { get; set; } = string.Empty;
    private string ErrorMessage { get; set; } = string.Empty;
    private bool IsRegistering { get; set; } = false;
    private bool IsLoading { get; set; } = false;

    // Store user ID in static field for mobile (no localStorage in MAUI)
    public static int CurrentUserId { get; set; } = 0;
    public static string CurrentUsername { get; set; } = string.Empty;

    protected override void OnInitialized()
    {
        // Check if already logged in
        if (CurrentUserId > 0)
        {
            Navigation.NavigateTo("/planner");
        }
    }

    private void ToggleMode()
    {
        IsRegistering = !IsRegistering;
        ErrorMessage = string.Empty;
        Password = string.Empty;
        ConfirmPassword = string.Empty;
    }

    private async Task HandleLogin()
    {
        ErrorMessage = string.Empty;

        if (string.IsNullOrWhiteSpace(Username) || string.IsNullOrWhiteSpace(Password))
        {
            ErrorMessage = "Please enter username and password";
            return;
        }

        IsLoading = true;
        StateHasChanged();

        try
        {
            var user = await AuthService.LoginAsync(Username.Trim(), Password);
            if (user != null)
            {
                CurrentUserId = user.Id;
                CurrentUsername = user.DisplayName ?? user.Username;
                Navigation.NavigateTo("/planner");
            }
            else
            {
                ErrorMessage = "Invalid username or password";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = "Login failed: " + ex.Message;
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task HandleRegister()
    {
        ErrorMessage = string.Empty;

        if (string.IsNullOrWhiteSpace(Username) || string.IsNullOrWhiteSpace(Password))
        {
            ErrorMessage = "Please enter username and password";
            return;
        }

        if (Username.Trim().Length < 3)
        {
            ErrorMessage = "Username must be at least 3 characters";
            return;
        }

        if (Password.Length < 4)
        {
            ErrorMessage = "Password must be at least 4 characters";
            return;
        }

        if (Password != ConfirmPassword)
        {
            ErrorMessage = "Passwords do not match";
            return;
        }

        IsLoading = true;
        StateHasChanged();

        try
        {
            if (await AuthService.UsernameExistsAsync(Username.Trim()))
            {
                ErrorMessage = "Username already taken";
                IsLoading = false;
                return;
            }

            var user = await AuthService.RegisterAsync(
                Username.Trim(),
                Password,
                string.IsNullOrWhiteSpace(DisplayName) ? null : DisplayName.Trim());

            if (user != null)
            {
                CurrentUserId = user.Id;
                CurrentUsername = user.DisplayName ?? user.Username;
                Navigation.NavigateTo("/planner");
            }
            else
            {
                ErrorMessage = "Registration failed";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = "Registration failed: " + ex.Message;
        }
        finally
        {
            IsLoading = false;
        }
    }
}
