@page "/planner"
@inject ITaskService TaskService
@inject IAuthService AuthService
@inject NavigationManager Navigation

<div class="mobile-planner theme-@CurrentTheme">
    <!-- Header -->
    <div class="mobile-header">
        <div class="header-left">
            <button class="icon-btn" @onclick="ToggleSettings">‚öôÔ∏è</button>
        </div>
        <div class="header-center">
            <h1>@GetHeaderText()</h1>
            <span class="header-date">@SelectedDate.ToString("MMMM d, yyyy")</span>
        </div>
        <div class="header-right">
            <button class="today-btn-small" @onclick="GoToToday">Today</button>
        </div>
    </div>

    <!-- Day Roller (Horizontal scrolling date picker) -->
    <div class="day-roller-wrapper">
        <div class="day-roller-track" @ref="dayRollerTrackRef"
             @ontouchstart="OnRollerTouchStart"
             @ontouchmove="OnRollerTouchMove"
             @ontouchend="OnRollerTouchEnd">
            @for (int offset = -14; offset <= 14; offset++)
            {
                var dayOffset = offset;
                var displayDate = DateTime.Today.AddDays(dayOffset);
                var isToday = displayDate.Date == DateTime.Today;
                var isSelected = displayDate.Date == SelectedDate.Date;
                var isWeekend = displayDate.DayOfWeek == DayOfWeek.Saturday || displayDate.DayOfWeek == DayOfWeek.Sunday;

                <div class="day-slot @(isToday ? "today" : "") @(isSelected ? "selected" : "") @(isWeekend ? "weekend" : "")"
                     data-date="@displayDate.ToString("yyyy-MM-dd")"
                     @onclick="() => SelectDate(displayDate)">
                    <span class="day-name">@displayDate.ToString("ddd")</span>
                    <span class="day-num">@displayDate.Day</span>
                </div>
            }
        </div>
    </div>

    <!-- Add Task -->
    <div class="add-task-section">
        <input type="text" @bind="NewTaskText" @bind:event="oninput"
               @onkeydown="HandleKeyDown" placeholder="Add a new task..." />
        <button class="add-btn" @onclick="AddTask">+</button>
    </div>

    <!-- Task Section Tabs -->
    <div class="task-section-tabs">
        <button class="section-tab @(ActiveTaskSection == TaskSection.Scheduled ? "active" : "")"
                @onclick="() => SetTaskSection(TaskSection.Scheduled)">
            <span class="tab-icon">üïê</span>
            <span class="tab-text">Scheduled</span>
            @if (ScheduledTasks.Any())
            {
                <span class="tab-count">@ScheduledTasks.Count</span>
            }
        </button>
        <button class="section-tab @(ActiveTaskSection == TaskSection.Tasks ? "active" : "")"
                @onclick="() => SetTaskSection(TaskSection.Tasks)">
            <span class="tab-icon">üìã</span>
            <span class="tab-text">Tasks</span>
            @if (AllDayTasks.Any())
            {
                <span class="tab-count">@AllDayTasks.Count</span>
            }
        </button>
        <button class="section-tab @(ActiveTaskSection == TaskSection.Waiting ? "active" : "")"
                @onclick="() => SetTaskSection(TaskSection.Waiting)">
            <span class="tab-icon">‚è≥</span>
            <span class="tab-text">Waiting</span>
            @if (OverdueTasks.Any())
            {
                <span class="tab-count">@OverdueTasks.Count</span>
            }
        </button>
    </div>

    <!-- Task List Content -->
    <div class="task-list">
        @if (ActiveTaskSection == TaskSection.Scheduled)
        {
            <div class="scheduled-section">
                @if (ScheduledTasks.Any())
                {
                    @foreach (var task in ScheduledTasks)
                    {
                        <div class="task-row scheduled @(task.IsCompleted ? "completed" : "")">
                            <input type="checkbox" checked="@task.IsCompleted" @onchange="() => ToggleTask(task)" />
                            <span class="task-time">@FormatTime(task.ScheduledTime)</span>
                            <span class="task-title @(task.IsCompleted ? "strikethrough" : "")">@task.Title</span>
                            <button class="clear-time-btn" title="Remove time" @onclick="() => ClearTaskTime(task)">‚úï</button>
                            <button class="delete-btn" @onclick="() => DeleteTask(task)">üóë</button>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state">
                        <p>No scheduled tasks</p>
                        <p class="hint">Drag tasks here or tap the clock icon</p>
                    </div>
                }
            </div>
        }

        @if (ActiveTaskSection == TaskSection.Tasks)
        {
            <div class="allday-section">
                @if (AllDayTasks.Any())
                {
                    @foreach (var task in AllDayTasks)
                    {
                        <div class="task-row @(task.IsCompleted ? "completed" : "")">
                            <input type="checkbox" checked="@task.IsCompleted" @onchange="() => ToggleTask(task)" />
                            <span class="task-title @(task.IsCompleted ? "strikethrough" : "")">@task.Title</span>
                            <button class="schedule-btn" title="Schedule time" @onclick="() => OpenTimeEditor(task)">üïê</button>
                            <button class="delete-btn" @onclick="() => DeleteTask(task)">üóë</button>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state">
                        <p>No tasks for this day</p>
                        <p class="hint">Add one above!</p>
                    </div>
                }
            </div>
        }

        @if (ActiveTaskSection == TaskSection.Waiting)
        {
            <div class="waiting-section">
                @if (OverdueTasks.Any())
                {
                    @foreach (var task in OverdueTasks)
                    {
                        <div class="task-row waiting">
                            <input type="checkbox" checked="@task.IsCompleted" @onchange="() => ToggleOverdueTask(task)" />
                            @if (task.ScheduledTime.HasValue)
                            {
                                <span class="task-time waiting-time">@FormatTime(task.ScheduledTime)</span>
                            }
                            <span class="task-title">@task.Title</span>
                            <span class="task-date">@task.TaskDate.ToString("M/d")</span>
                            <button class="move-btn" title="Move to today" @onclick="() => MoveToToday(task)">‚ûú</button>
                            <button class="delete-btn" @onclick="() => DeleteOverdueTask(task)">üóë</button>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state">
                        <p>No waiting tasks</p>
                        <p class="hint">You're all caught up!</p>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Time Editor Modal -->
    @if (ShowTimeEditor)
    {
        <div class="modal-overlay" @onclick="CloseTimeEditor">
            <div class="modal-content time-editor-modal" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h3>Schedule Time</h3>
                    <button class="close-btn" @onclick="CloseTimeEditor">‚úï</button>
                </div>
                <div class="modal-body">
                    <div class="time-input-group">
                        <label>Time</label>
                        <input type="text" placeholder="HH:mm" @bind="EditingTimeValue" />
                    </div>
                    <div class="duration-group">
                        <label>Duration</label>
                        <select @bind="EditingDuration">
                            <option value="15">15 min</option>
                            <option value="30">30 min</option>
                            <option value="45">45 min</option>
                            <option value="60">1 hour</option>
                            <option value="90">1.5 hours</option>
                            <option value="120">2 hours</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="cancel-btn" @onclick="CloseTimeEditor">Cancel</button>
                    <button class="save-btn" @onclick="SaveTimeEditor">Save</button>
                </div>
            </div>
        </div>
    }

    <!-- Settings Panel (Overlay) -->
    @if (ShowSettings)
    {
        <div class="settings-overlay" @onclick="ToggleSettings">
            <div class="settings-panel" @onclick:stopPropagation="true">
                <div class="settings-header">
                    <h2>Settings</h2>
                    <button class="close-btn" @onclick="ToggleSettings">‚úï</button>
                </div>

                <div class="settings-content">
                    <div class="setting-group">
                        <label>Theme</label>
                        <select @bind="CurrentTheme" @bind:after="SaveSettings">
                            <option value="teal">Teal</option>
                            <option value="blue">Blue</option>
                            <option value="red">Red</option>
                            <option value="orange">Orange</option>
                            <option value="dark">Dark</option>
                            <option value="light">Light</option>
                            <option value="tropical">Tropical</option>
                            <option value="nordic">Nordic</option>
                            <option value="pinkish">Pinkish</option>
                            <option value="bigly">Bigly</option>
                            <option value="vampire">Vampire</option>
                            <option value="greek">Greek</option>
                        </select>
                    </div>

                    <div class="user-info">
                        <p>Signed in as <strong>@Login.CurrentUsername</strong></p>
                        <button class="logout-btn" @onclick="Logout">Logout</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private ElementReference dayRollerTrackRef;

    private DateTime SelectedDate { get; set; } = DateTime.Today;
    private string CurrentTheme { get; set; } = "teal";
    private string NewTaskText { get; set; } = "";
    private List<DailyTask> Tasks { get; set; } = new();
    private List<DailyTask> OverdueTasks { get; set; } = new();
    private bool ShowSettings { get; set; } = false;
    private bool ShowTimeEditor { get; set; } = false;
    private DailyTask? EditingTimeTask { get; set; }
    private string EditingTimeValue { get; set; } = "09:00";
    private int EditingDuration { get; set; } = 30;

    // Touch handling for day roller
    private double touchStartX;
    private double touchCurrentX;
    private bool isTouching;

    private enum TaskSection { Scheduled, Tasks, Waiting }
    private TaskSection ActiveTaskSection { get; set; } = TaskSection.Tasks;

    // Computed task lists
    private List<DailyTask> ScheduledTasks => Tasks.Where(t => !t.IsAllDay && t.ScheduledTime.HasValue).OrderBy(t => t.ScheduledTime).ToList();
    private List<DailyTask> AllDayTasks => Tasks.Where(t => t.IsAllDay || !t.ScheduledTime.HasValue).ToList();

    protected override async Task OnInitializedAsync()
    {
        if (Login.CurrentUserId == 0)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        var user = await AuthService.GetUserByIdAsync(Login.CurrentUserId);
        if (user != null)
        {
            CurrentTheme = user.Theme;
        }

        await LoadTasksAsync();
    }

    private async Task LoadTasksAsync()
    {
        if (Login.CurrentUserId == 0) return;

        Tasks = await TaskService.GetTasksForDateAsync(SelectedDate, Login.CurrentUserId);
        OverdueTasks = await TaskService.GetOverdueTasksAsync(DateTime.Today, Login.CurrentUserId);

        StateHasChanged();
    }

    private string GetHeaderText()
    {
        if (SelectedDate.Date == DateTime.Today)
            return "Today";
        if (SelectedDate.Date == DateTime.Today.AddDays(1))
            return "Tomorrow";
        if (SelectedDate.Date == DateTime.Today.AddDays(-1))
            return "Yesterday";
        return SelectedDate.ToString("dddd");
    }

    private void SetTaskSection(TaskSection section)
    {
        ActiveTaskSection = section;
    }

    private async Task SelectDate(DateTime date)
    {
        SelectedDate = date;
        await LoadTasksAsync();
    }

    private async Task GoToToday()
    {
        SelectedDate = DateTime.Today;
        await LoadTasksAsync();
    }

    // Touch handlers for horizontal day roller
    private void OnRollerTouchStart(TouchEventArgs e)
    {
        if (e.Touches.Length > 0)
        {
            touchStartX = e.Touches[0].ClientX;
            touchCurrentX = touchStartX;
            isTouching = true;
        }
    }

    private void OnRollerTouchMove(TouchEventArgs e)
    {
        if (!isTouching || e.Touches.Length == 0) return;
        touchCurrentX = e.Touches[0].ClientX;
    }

    private async Task OnRollerTouchEnd(TouchEventArgs e)
    {
        if (!isTouching) return;
        isTouching = false;

        var deltaX = touchCurrentX - touchStartX;

        // If swipe distance is significant, change date
        if (Math.Abs(deltaX) > 50)
        {
            if (deltaX > 0)
            {
                // Swiped right - go to previous day
                SelectedDate = SelectedDate.AddDays(-1);
            }
            else
            {
                // Swiped left - go to next day
                SelectedDate = SelectedDate.AddDays(1);
            }
            await LoadTasksAsync();
        }
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await AddTask();
        }
    }

    private async Task AddTask()
    {
        if (string.IsNullOrWhiteSpace(NewTaskText) || Login.CurrentUserId == 0) return;

        var task = new DailyTask
        {
            Title = NewTaskText,
            TaskDate = SelectedDate,
            IsCompleted = false,
            SortOrder = Tasks.Count,
            IsAllDay = true,
            UserId = Login.CurrentUserId
        };

        await TaskService.CreateTaskAsync(task);
        NewTaskText = "";
        await LoadTasksAsync();
    }

    private async Task ToggleTask(DailyTask task)
    {
        await TaskService.ToggleCompletionAsync(task.Id, Login.CurrentUserId);
        await LoadTasksAsync();
    }

    private async Task DeleteTask(DailyTask task)
    {
        await TaskService.DeleteTaskAsync(task.Id, Login.CurrentUserId);
        await LoadTasksAsync();
    }

    private async Task ToggleOverdueTask(DailyTask task)
    {
        await TaskService.ToggleCompletionAsync(task.Id, Login.CurrentUserId);
        await LoadTasksAsync();
    }

    private async Task DeleteOverdueTask(DailyTask task)
    {
        await TaskService.DeleteTaskAsync(task.Id, Login.CurrentUserId);
        await LoadTasksAsync();
    }

    private async Task MoveToToday(DailyTask task)
    {
        await TaskService.RescheduleTaskAsync(task.Id, DateTime.Today, Login.CurrentUserId);

        // Navigate to today and switch to Tasks tab
        SelectedDate = DateTime.Today;
        ActiveTaskSection = TaskSection.Tasks;

        await LoadTasksAsync();
    }

    private async Task ClearTaskTime(DailyTask task)
    {
        await TaskService.ScheduleTaskTimeAsync(task.Id, null, Login.CurrentUserId, 30);
        await LoadTasksAsync();
    }

    private void OpenTimeEditor(DailyTask task)
    {
        EditingTimeTask = task;
        EditingTimeValue = task.ScheduledTime.HasValue
            ? $"{task.ScheduledTime.Value.Hours:D2}:{task.ScheduledTime.Value.Minutes:D2}"
            : "09:00";
        EditingDuration = task.DurationMinutes > 0 ? task.DurationMinutes : 30;
        ShowTimeEditor = true;
    }

    private void CloseTimeEditor()
    {
        ShowTimeEditor = false;
        EditingTimeTask = null;
    }

    private async Task SaveTimeEditor()
    {
        if (EditingTimeTask == null) return;

        if (TimeSpan.TryParse(EditingTimeValue, out var time))
        {
            await TaskService.ScheduleTaskTimeAsync(EditingTimeTask.Id, time, Login.CurrentUserId, EditingDuration);

            // Switch to Scheduled tab to show the newly scheduled task
            ActiveTaskSection = TaskSection.Scheduled;

            await LoadTasksAsync();
        }

        CloseTimeEditor();
    }

    private void ToggleSettings()
    {
        ShowSettings = !ShowSettings;
    }

    private async Task SaveSettings()
    {
        await AuthService.UpdateUserSettingsAsync(Login.CurrentUserId, CurrentTheme, true, false);
    }

    private void Logout()
    {
        Login.CurrentUserId = 0;
        Login.CurrentUsername = string.Empty;
        Navigation.NavigateTo("/login");
    }

    private string FormatTime(TimeSpan? time)
    {
        if (!time.HasValue) return "";
        var dt = DateTime.Today.Add(time.Value);
        return dt.ToString("h:mm tt");
    }
}
