<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Frame Colors (Dark gothic - blood red accents) -->
    <SolidColorBrush x:Key="FrameBg" Color="#1A0A0A"/>
    <SolidColorBrush x:Key="FrameBorder" Color="#8B0000"/>

    <!-- Calendar Section (Dark with red) -->
    <SolidColorBrush x:Key="CalendarBg" Color="#1A0A0A"/>
    <SolidColorBrush x:Key="CalendarHeaderBg" Color="#8B0000"/>
    <SolidColorBrush x:Key="CalendarDayBg" Color="#2D1515"/>
    <SolidColorBrush x:Key="CalendarSelectedDay" Color="#B22222"/>
    <SolidColorBrush x:Key="CalendarTodayBg" Color="#5C0000"/>

    <!-- Task Section (Dark gothic) -->
    <SolidColorBrush x:Key="TaskListBg" Color="#1A0A0A"/>
    <SolidColorBrush x:Key="TaskHeaderBg" Color="#8B0000"/>
    <SolidColorBrush x:Key="TaskRowBg" Color="#2D1515"/>
    <SolidColorBrush x:Key="TaskRowHoverBg" Color="#3D1515"/>
    <SolidColorBrush x:Key="TaskRowCompletedBg" Color="#1A2A1A"/>
    <SolidColorBrush x:Key="TaskRowCompletedText" Color="#6B8B6B"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimary" Color="#E8E0E0"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#B22222"/>
    <SolidColorBrush x:Key="TextLight" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextHeader" Color="#FF6B6B"/>

    <!-- Checkbox Styling -->
    <SolidColorBrush x:Key="CheckboxBorder" Color="#8B0000"/>
    <SolidColorBrush x:Key="CheckboxChecked" Color="#B22222"/>
    <SolidColorBrush x:Key="CheckboxUnchecked" Color="#2D1515"/>

    <!-- Button Styling -->
    <SolidColorBrush x:Key="ButtonBg" Color="#8B0000"/>
    <SolidColorBrush x:Key="ButtonHoverBg" Color="#B22222"/>
    <SolidColorBrush x:Key="ButtonText" Color="#FFFFFF"/>

    <!-- Input Styling -->
    <SolidColorBrush x:Key="InputBg" Color="#1A0A0A"/>
    <SolidColorBrush x:Key="InputBorder" Color="#5C1515"/>

    <!-- Common Styles - Gothic serif font -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Georgia, Times New Roman, serif"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource TextHeader}"/>
    </Style>

    <Style x:Key="TaskTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Georgia, Times New Roman, serif"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Checkbox Style -->
    <Style x:Key="TaskCheckboxStyle" TargetType="CheckBox">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid>
                        <Border x:Name="border"
                                Width="24" Height="24"
                                BorderThickness="2"
                                BorderBrush="{DynamicResource CheckboxBorder}"
                                Background="{DynamicResource CheckboxUnchecked}"
                                CornerRadius="4">
                            <Path x:Name="checkMark"
                                  Data="M 2,6 L 6,10 L 12,2"
                                  Stroke="{DynamicResource CheckboxChecked}"
                                  StrokeThickness="3"
                                  Visibility="Collapsed"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource TaskRowCompletedBg}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource CheckboxChecked}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Calendar Day Button Style - Gothic -->
    <Style x:Key="CalendarDayButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="FontFamily" Value="Georgia, Times New Roman, serif"/>
        <Setter Property="Background" Value="{DynamicResource CalendarDayBg}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#5C1515"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource CalendarSelectedDay}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextLight}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
