<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Frame Colors (Dark slate outer) -->
    <SolidColorBrush x:Key="FrameBg" Color="#2C3E50"/>
    <SolidColorBrush x:Key="FrameBorder" Color="#1A252F"/>

    <!-- Calendar Section (Gray/Slate) -->
    <SolidColorBrush x:Key="CalendarBg" Color="#5D6D7E"/>
    <SolidColorBrush x:Key="CalendarHeaderBg" Color="#34495E"/>
    <SolidColorBrush x:Key="CalendarDayBg" Color="#85929E"/>
    <SolidColorBrush x:Key="CalendarSelectedDay" Color="#AEB6BF"/>
    <SolidColorBrush x:Key="CalendarTodayBg" Color="#7F8C8D"/>

    <!-- Task Section (Light gray) -->
    <SolidColorBrush x:Key="TaskListBg" Color="#D5DBDB"/>
    <SolidColorBrush x:Key="TaskHeaderBg" Color="#5D6D7E"/>
    <SolidColorBrush x:Key="TaskRowBg" Color="#ECF0F1"/>
    <SolidColorBrush x:Key="TaskRowHoverBg" Color="#D5DBDB"/>
    <SolidColorBrush x:Key="TaskRowCompletedBg" Color="#A9DFBF"/>
    <SolidColorBrush x:Key="TaskRowCompletedText" Color="#2C3E50"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimary" Color="#2C3E50"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#5D6D7E"/>
    <SolidColorBrush x:Key="TextLight" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextHeader" Color="#1A252F"/>

    <!-- Checkbox Styling -->
    <SolidColorBrush x:Key="CheckboxBorder" Color="#34495E"/>
    <SolidColorBrush x:Key="CheckboxChecked" Color="#27AE60"/>
    <SolidColorBrush x:Key="CheckboxUnchecked" Color="#FFFFFF"/>

    <!-- Button Styling -->
    <SolidColorBrush x:Key="ButtonBg" Color="#34495E"/>
    <SolidColorBrush x:Key="ButtonHoverBg" Color="#5D6D7E"/>
    <SolidColorBrush x:Key="ButtonText" Color="#FFFFFF"/>

    <!-- Input Styling -->
    <SolidColorBrush x:Key="InputBg" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputBorder" Color="#5D6D7E"/>

    <!-- Common Styles -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource TextHeader}"/>
    </Style>

    <Style x:Key="TaskTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Checkbox Style -->
    <Style x:Key="TaskCheckboxStyle" TargetType="CheckBox">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid>
                        <Border x:Name="border"
                                Width="24" Height="24"
                                BorderThickness="2"
                                BorderBrush="{DynamicResource CheckboxBorder}"
                                Background="{DynamicResource CheckboxUnchecked}"
                                CornerRadius="4">
                            <Path x:Name="checkMark"
                                  Data="M 2,6 L 6,10 L 12,2"
                                  Stroke="{DynamicResource CheckboxChecked}"
                                  StrokeThickness="3"
                                  Visibility="Collapsed"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource TaskRowCompletedBg}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource CheckboxChecked}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Calendar Day Button Style -->
    <Style x:Key="CalendarDayButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Background" Value="{DynamicResource CalendarDayBg}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextLight}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource CalendarHeaderBg}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource CalendarSelectedDay}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
