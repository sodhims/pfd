<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Frame Colors (Marbled black with gold accents - Mar-a-Lago INVERTED) -->
    <SolidColorBrush x:Key="FrameBg" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="FrameBorder" Color="#FFD700"/>

    <!-- Calendar Section (Gold backgrounds) -->
    <SolidColorBrush x:Key="CalendarBg" Color="#D4AF37"/>
    <SolidColorBrush x:Key="CalendarHeaderBg" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CalendarDayBg" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CalendarSelectedDay" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="CalendarTodayBg" Color="#FFD700"/>

    <!-- Task Section (Gold backgrounds, white elements) -->
    <SolidColorBrush x:Key="TaskListBg" Color="#D4AF37"/>
    <SolidColorBrush x:Key="TaskHeaderBg" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TaskRowBg" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TaskRowHoverBg" Color="#FFFEF5"/>
    <SolidColorBrush x:Key="TaskRowCompletedBg" Color="#E8F5E9"/>
    <SolidColorBrush x:Key="TaskRowCompletedText" Color="#1A1A1A"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimary" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#B8960B"/>
    <SolidColorBrush x:Key="TextLight" Color="#FFD700"/>
    <SolidColorBrush x:Key="TextHeader" Color="#B8960B"/>

    <!-- Checkbox Styling -->
    <SolidColorBrush x:Key="CheckboxBorder" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="CheckboxChecked" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="CheckboxUnchecked" Color="#FFFFFF"/>

    <!-- Button Styling -->
    <SolidColorBrush x:Key="ButtonBg" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="ButtonHoverBg" Color="#FFD700"/>
    <SolidColorBrush x:Key="ButtonText" Color="#FFD700"/>

    <!-- Input Styling -->
    <SolidColorBrush x:Key="InputBg" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputBorder" Color="#1A1A1A"/>

    <!-- Common Styles - BIGLY fonts! -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="ExtraBold"/>
        <Setter Property="Foreground" Value="{DynamicResource TextHeader}"/>
    </Style>

    <Style x:Key="TaskTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Checkbox Style - BIGLY size -->
    <Style x:Key="TaskCheckboxStyle" TargetType="CheckBox">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid>
                        <Border x:Name="border"
                                Width="32" Height="32"
                                BorderThickness="3"
                                BorderBrush="{DynamicResource CheckboxBorder}"
                                Background="{DynamicResource CheckboxUnchecked}"
                                CornerRadius="4">
                            <Path x:Name="checkMark"
                                  Data="M 2,8 L 8,14 L 18,2"
                                  Stroke="{DynamicResource CheckboxChecked}"
                                  StrokeThickness="4"
                                  Visibility="Collapsed"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource TaskRowCompletedBg}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource CheckboxChecked}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Calendar Day Button Style - BIGLY inverted -->
    <Style x:Key="CalendarDayButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Background" Value="{DynamicResource CalendarDayBg}"/>
        <Setter Property="Foreground" Value="#B8960B"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="#1A1A1A"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#1A1A1A"/>
                            <Setter Property="Foreground" Value="#FFD700"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
